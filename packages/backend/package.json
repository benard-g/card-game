{
  "name": "@packages/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node build/src/main.js",
    "build": "tsc",
    "build:clean": "rimraf build",
    "build:re": "yarn build:clean && yarn build",
    "dev": "tsc-watch --onSuccess 'yarn start'",
    "test": "yarn test:lint && yarn test:jest",
    "test:lint": "eslint --max-warnings=0 '{src,test}/**/*.{js,jsx,ts,tsx}'",
    "test:jest": "jest 'test/.*.test.ts' --runInBand --coverage"
  },
  "engines": {
    "node": "v14.15.1"
  },
  "dependencies": {
    "apollo-server-express": "^2.19.0",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/source-map-support": "^0.5.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.2"
  }
}
