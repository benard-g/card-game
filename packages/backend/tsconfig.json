{
  "include": ["src", "test"],
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "types": ["node", "jest"],
    "composite": true,
    "incremental": true,
    "outDir": "./build",
    "tsBuildInfoFile": "./build/ts-build-info.json",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
